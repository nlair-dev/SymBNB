<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Connexion à l'administration</title>
    {{ encore_entry_link_tags('app') }}

    <style>
        body {
            display: flex;
            justify-content: center;
            height: 100vh;
        }

        .card {
            margin-top: 10%;
        }
    </style>
</head>
<body>
<div class="col-md-6">
    <div class="card bg-light">
        <div class="car-header">
            <h4 class="card-title ml-2 my-2">
                <i class="fas fa-lock"></i>
                Connexion à l'administration
            </h4>
        </div>
        <div class="card-body">
            {% if hasError %}
                <div class="alert alert-warning">
                    <p>Les informations que vous avez fournies ne sont pas bonnes.</p>
                </div>
            {% endif %}
            <form action="" method="post">
                <div class="form-group">
                    <label for="_username">Email</label>
                    <input type="text" name="_username" id="" class="form-control" placeholder="Adresse email ..." value="{{ username }}">
                </div>

                <div class="form-group">
                    <label for="_password">Mot de passe</label>
                    <input type="text" name="_password" id="" class="form-control" placeholder="Mot de passe ...">
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-lock-open"></i>
                        Connexion !
                    </button>
                    <a href="{{ path('homepage') }}" class="btn btn-link">
                        <i class="fas fa-arrow-circle-left">
                            Retour au site
                        </i>
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

</body>
{{ encore_entry_script_tags('app') }}
<script src="https://kit.fontawesome.com/8c4371663b.js" crossorigin="anonymous"></script>
</html>