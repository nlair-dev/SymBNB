<div class="col">
    <div class="card border-secondary mb-3">
        <div class="card body">
            <h4 class="card-title ml-3 mt-1">{{ user.fullName }}</h4>
            <hr>
            <div class="card-text ml-3">
                <img src="{{ user.picture }}" alt="Avatar de {{ user.fullName }}" class="float-left mr-3 avatar avatar-medium">
                <p>{{ user.introduction }}</p>
                <a href="{{ path('user_show', {'slug': user.slug }) }}" class="btn btn-success float-right my-2 mr-1">En savoir plus</a>
            </div>
        </div>
    </div>
</div>